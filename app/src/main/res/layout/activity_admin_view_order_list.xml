<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminViewOrderList">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_notDelivered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:height="70dip"
            android:maxWidth="130dip"
            android:text="@string/btn_notDelivered"
            android:textColor="@color/espresso"
            android:textStyle="bold"
            app:backgroundTint="#D1CECE"
            app:iconTint="#000000" />

        <Button
            android:id="@+id/btn_delivered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:height="70dip"
            android:maxWidth="130dip"
            android:text="@string/btn_delivered"
            android:textColor="@color/espresso"
            android:textStyle="bold"
            app:backgroundTint="#D1CECE"
            app:strokeColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="140dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="80dip"
            android:text="Order ID                                                  "
            android:textColor="#000000"
            app:backgroundTint="#D8D4D4"
            app:icon="@drawable/ic_arrow"
            app:iconGravity="end"
            app:iconTint="#000000" />

        <Button
            android:id="@+id/button17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="80dip"
            android:text="Order ID                                                  "
            android:textColor="#000000"
            app:backgroundTint="#D8D4D4"
            app:icon="@drawable/ic_arrow"
            app:iconGravity="end"
            app:iconTint="#000000" />

        <Button
            android:id="@+id/button18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="80dip"
            android:text="Order ID                                                  "
            android:textColor="#0B0B0B"
            app:backgroundTint="#D8D4D4"
            app:icon="@drawable/ic_arrow"
            app:iconGravity="end"
            app:iconTint="#000000" />

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="80dip"
            android:text="Order ID                                                  "
            android:textColor="#1B1B1B"
            app:backgroundTint="#D8D4D4"
            app:icon="@drawable/ic_arrow"
            app:iconGravity="end"
            app:iconTint="#000000" />

        <Button
            android:id="@+id/button11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="80dip"
            android:text="Order ID                                                  "
            android:textColor="#000000"
            app:backgroundTint="#D8D4D4"
            app:icon="@drawable/ic_arrow"
            app:iconGravity="end"
            app:iconTint="#000000" />

        <Button
            android:id="@+id/button12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="80dip"
            android:text="Order ID                                                  "
            android:textColor="#090909"
            app:backgroundTint="#D8D4D4"
            app:icon="@drawable/ic_arrow"
            app:iconGravity="end"
            app:iconTint="#000000" />

        <Button
            android:id="@+id/button13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="80dip"
            android:text="Order ID                                                  "
            android:textColor="#000000"
            app:backgroundTint="#D8D4D4"
            app:icon="@drawable/ic_arrow"
            app:iconGravity="end"
            app:iconTint="#000000" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>