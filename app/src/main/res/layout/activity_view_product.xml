<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    tools:context="ed_view_name">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="314dp"
        android:layout_height="84dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/view_product" />

    <ImageView
        android:id="@+id/ed_view_img"
        android:layout_width="317dp"
        android:layout_height="233dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="@drawable/starbuck" />

    <TextView
        android:id="@+id/ed_view_name"
        android:layout_width="205dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:text="@string/ed_view_name"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.228"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_view_img" />

    <TextView
        android:id="@+id/ed_view_price"
        android:layout_width="155dp"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:text="@string/ed_view_price"
        android:textColor="?attr/colorPrimary"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.183"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_view_name" />

    <TextView
        android:id="@+id/ed_view_des"
        android:layout_width="311dp"
        android:layout_height="130dp"
        android:layout_marginTop="8dp"
        android:text="@string/ed_view_des"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_view_price" />

    <Button
        android:id="@+id/ed_btn_update"
        android:layout_width="94dp"
        android:layout_height="57dp"
        android:layout_marginTop="40dp"
        android:text="@string/ed_btn_update"
        app:layout_constraintEnd_toStartOf="@+id/ed_btn_delete"
        app:layout_constraintHorizontal_bias="0.731"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_view_des" />

    <Button
        android:id="@+id/ed_btn_delete"
        android:layout_width="94dp"
        android:layout_height="57dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        android:text="@string/ed_btn_delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_view_des" />
</androidx.constraintlayout.widget.ConstraintLayout>