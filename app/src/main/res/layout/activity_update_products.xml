<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".UpdateProducts">
    app:cardCornerRadius="6dp"
    android:elevation="6dp"
    app:cardBackgroundColor="@color/white"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="171dp"
        android:layout_marginTop="15dp"
        android:padding="15dp"
        tools:ignore="MissingConstraints">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ImageProduct"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="@color/black"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/product_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/ImageProduct"
            android:text="Product Name"
            android:textColor="#000"
            android:textSize="25sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/pPrice"
            android:layout_width="283dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_Name"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="-2dp"
            android:layout_toRightOf="@id/ImageProduct"
            android:text="Product Price"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/pDes"
            android:layout_width="280dp"
            android:layout_height="27dp"
            android:layout_below="@+id/pPrice"
            android:layout_alignEnd="@+id/pPrice"
            android:layout_alignRight="@+id/pPrice"
            android:layout_marginStart="27dp"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="-4dp"
            android:layout_marginEnd="-5dp"
            android:layout_marginRight="-5dp"
            android:layout_marginBottom="100dp"
            android:layout_toEndOf="@+id/ImageProduct"
            android:layout_toRightOf="@+id/ImageProduct"
            android:text="Product Description"
            android:textColor="#000"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="385dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/pPrice"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonEditProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:text="Edit"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/buttonDeleteProduct"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Delete"
                android:textAllCaps="false" />

        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
